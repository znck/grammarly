{
  "private": true,
  "name": "grammarly",
  "publisher": "znck",
  "displayName": "Grammarly",
  "description": "A grammar checking for Visual Studio Code using Grammarly.",
  "version": "0.14.0",
  "icon": "assets/logo.png",
  "preview": true,
  "engines": {
    "vscode": "^1.66.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/znck/grammarly"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Grammarly",
    "grammar",
    "spellcheck",
    "writing assistant",
    "writing"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown"
  ],
  "contributes": {
    "configuration": {
      "title": "Grammarly",
      "properties": {
        "grammarly.patterns": {
          "type": "array",
          "description": "A glob pattern, like `*.{md,txt}` for file scheme.",
          "items": {
            "type": "string"
          },
          "default": [
            "**/readme.md",
            "**/README.md",
            "**/*.txt"
          ],
          "required": true
        },
        "grammarly.selectors": {
          "type": "array",
          "description": "Filter documents to be checked with Grammarly.",
          "items": {
            "type": "object",
            "properties": {
              "scheme": {
                "type": "string",
                "description": "A Uri scheme, like `file` or `untitled`."
              },
              "language": {
                "type": "string",
                "description": "A language id, like `typescript`."
              },
              "pattern": {
                "type": "string",
                "description": "A glob pattern, like `*.{md,txt}`."
              }
            }
          },
          "default": [],
          "required": true
        }
      }
    }
  },
  "license": "MIT",
  "main": "./dist/extension/index.node.js",
  "browser": "./dist/extension/index.browser.js",
  "buildConfig": {
    "external": [
      "vscode",
      "tree-sitter-markdown.wasm",
      "tree-sitter-html.wasm"
    ],
    "useMain": false,
    "sources": {
      "src/index.ts": [
        {
          "format": "cjs",
          "file": "dist/extension/index.node.js"
        },
        {
          "format": "esm",
          "file": "dist/extension/index.browser.js",
          "bundle": {
            "platform": "browser",
            "external": [
              "vscode"
            ]
          }
        }
      ],
      "src/server.ts": [
        {
          "format": "cjs",
          "file": "dist/server/index.node.js"
        },
        {
          "format": "esm",
          "file": "dist/server/index.browser.js",
          "bundle": {
            "platform": "browser",
            "external": [
              "vscode"
            ]
          }
        }
      ]
    }
  },
  "files": [
    "./dist/",
    "./README.md",
    "./CHANGELOG.md",
    "./LICENSE"
  ],
  "scripts": {
    "build": "vsce package --no-dependencies --out grammarly.vsix",
    "release": "vsce publish -p ${VSCODE_MARKETPLACE_TOKEN}"
  },
  "dependencies": {
    "inversify": "^6.0.1",
    "reflect-metadata": "^0.1.13",
    "unofficial-grammarly-language-client": "workspace:*",
    "unofficial-grammarly-language-server": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "typescript": "^4.6.4",
    "vsce": "^2.7.0"
  }
}
